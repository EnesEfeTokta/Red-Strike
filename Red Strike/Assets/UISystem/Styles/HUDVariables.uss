:root {
    --primary-cyan: #00FFFF;
    --secondary-blue: #0096FF;
    --danger-red: #FF2828;
    --panel-bg: rgba(5, 10, 15, 0.95);
    --glass-bg: rgba(0, 0, 0, 0.5);
}

Label {
    color: white;
    font-size: 14px;
}

/* ANA İSKELET */
.root-interface {
    width: 100%;
    height: 100%;
    /* Ekranı Dikey (Yukarıdan Aşağı) diziyoruz */
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Üstü tepeye, altı dibe it */
}